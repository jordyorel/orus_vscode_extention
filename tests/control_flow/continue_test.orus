// Test continue statement in loops

let sum = 0

print("Continue Test in While Loop:")

let i = 0
while i < 10 {
    i = i + 1
    if i % 2 == 0 {
        print("Skipping even number:")
        print(i)
        continue
    }
    sum = sum + i
    print("Added odd number:")
    print(i)
    print("Sum =")
    print(sum)
}

print("Final sum of odd numbers:")
print(sum)

// Test continue in for loop
print("Continue Test in For Loop:")
sum = 0

for j in 1..10 {
    if j % 2 == 0 {
        print("Skipping even number:")
        print(j)
        continue
    }
    sum = sum + j
    print("Added odd number:")
    print(j)
    print("Sum =")
    print(sum)
}

print("Final sum of odd numbers:")
print(sum)
