{
  "name": "orus-lang",
  "displayName": "Orus Language",
  "description": "Syntax highlighting for the Orus programming language",
  "version": "0.0.4",
  "icon": "logo/logo.png",
  "publisher": "orus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordyorel/orus_vscode_extention.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "orus",
        "aliases": [
          "Orus",
          "orus"
        ],
        "extensions": [
          ".orus"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./logo/logo.png",
          "dark": "./logo/logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "orus",
        "scopeName": "source.orus",
        "path": "./syntaxes/orus.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Orus Rust-Python",
        "uiTheme": "vs-dark",
        "path": "./themes/orus-color-theme.json"
      }
    ]
  },
  "scripts": {
    "test": "echo \"No tests specified\""
  }
}
